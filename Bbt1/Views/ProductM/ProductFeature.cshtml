@model IEnumerable<Bbt1.Models.Product_Feature>


<link href="~/Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<style>
    .collapsible {
        background-color: gray;
        color: white;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
        font-weight: bold;
    }

        .active, .collapsible:hover {
            background-color: #555;
        }

    .content {
        padding: 5px 18px;
        display: none;
        overflow: hidden;
        background-color: #f1f1f1;
        font-weight: bold;
    }

        .content p {
            margin: 5px;
        }
</style>

<h2>@ViewBag.feature_pname</h2>

<p>
    @Html.ActionLink("Create New", "AddFeature", new { id = ViewBag.feature_pid })
</p>

@foreach (var item in Model)
{
    <button class="collapsible">@item.pf_description</button>
    <div class="content">
        <p>
            @item.pf_note<span class="pull-right">
            <a href="~/ProductM/DeleteProductFeature/@item.pf_id" class="alert_demo_7" onclick="return confirm('確定要刪除嗎?')"><i class="fa fa-times" style="color:red;font-size:18px;"></i></a>


            </span>
        </p>

    @*@Html.ActionLink("Delete", "DeleteProductFeature", new { id = item.pf_id }, new { onclick = "return confirm('確定要刪除嗎?')" })*@


</div>
}

<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "block") {
                content.style.display = "none";
            } else {
                content.style.display = "block";
            }
        });
    }
</script>