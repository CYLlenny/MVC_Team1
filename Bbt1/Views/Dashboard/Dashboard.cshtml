    itemsttt += item.sum;
    itemst[0] = itemsttt;
}
@foreach (var item in sevendays)
{
    days[ii] = DateTime.Parse(item.day.ToString()).ToShortDateString();
    day7money[ii] = item.sum;
    ii++;
}

@foreach (var o in hot3)
{
