    hotcat[i] = o.c_name;
    i++;
}

@foreach (var s in monthlyearning)
{
    monthly += s.sum;
}

@if (daily == null)
{
    ddaily = 0;
}
else
{
    ddaily = daily.sum;
}

@{
    var hot3sum = Json.Encode(hotsum);
    var hot3cat = Json.Encode(hotcat);
