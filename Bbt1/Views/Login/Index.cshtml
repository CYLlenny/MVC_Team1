
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <form action="@Url.Action("Index")" method="post">
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <span class="control-label col-md-2">帳號</span>
                <div class="col-md-10">
                    <input type="text" id="account" name="name" required="required" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <span class="control-label col-md-2">密碼</span>
                <div class="col-md-10">
                    <input type="password" id="password" name="password" required="required" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="登入" class="btn btn-default" />
                </div>

            </div>
        </div>
    </form>

</div>

